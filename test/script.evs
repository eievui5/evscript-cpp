env script {
	use std;
	def print(const ptr);
	pool = 16;
}

script TestScript {
	u8 value = 0;

	// This will print "Hello, world!", since value is nonzero.
	if value += 1 {
		print("Hello, world!");
	} else {
		print("Where am I?");
	}

	// This will continually increment the background palette and then yield,
	// until rBGP is all white.
	while value += 1 {
		rBGP = value;

		u8 i = 8;
		while i -= 1 {
			yield;
		}
	}
}